{% for field, params in fields %}
{% if 'id' == field or 'created' in field or 'updated' in field %}
{% elseif 'firstname' in field or 'lastname' in field or 'nickname' in field%}
           "{{ field }}" => $this->faker->name,
{% elseif 'text' == params['type'] %}
           "{{ field }}" => $this->faker->text(180),
{% elseif 'numeric' == params['type'] %}
           "{{ field }}" => $this->faker->numberBetween(),
{% elseif 'boolean' == params['type'] %}
           "{{ field }}" => $this->faker->numberBetween(0, 1),
{% else %}
           "{{ field }}" => $this->faker->sentence(3),
{% endif %}
{% endfor %}
