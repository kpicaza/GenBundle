    /**
{% block phpdoc_method_header %}
     * Finds and displays a {{ entity }} entity.
{% endblock phpdoc_method_header %}
     *
{% block phpdoc_method_annotations %}
     * @ApiDoc(
     *   section = "{{ entity }}s",
     *   description = "Get {{ entity_singularized }} by ID.",
     *   statusCodes = {
     *     200 = "Show {{ entity_singularized }} info.",
     *     400 = "Invalid request.",
     *   }
     * )
{% endblock phpdoc_method_annotations %}
     */
{% block method_definition %}
    public function options{{ entity }}Action()
{% endblock method_definition %}
    {
{% block method_body %}
        $options = $this->get('app.api_{{ entity_singularized }}_handler')->options();
{% endblock method_body %}

{% block method_return %}
        $view = $this->view($options);

        $response = $this->handleView($view);

        $response->headers->set('Allow', 'OPTIONS, GET, PUT, POST');

        return $response;
{% endblock method_return %}
    }